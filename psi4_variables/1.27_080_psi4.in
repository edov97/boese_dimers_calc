set_num_threads(4)
memory 8 GB
basis this_basis {
    assign    def2-qzvp
}

molecule {
     0 1
    --
     0 1
     H        0.00000        0.00000        1.62588
    Cl        0.00000        0.00000        2.99334
    --
     0 1
     H        0.00000       -2.14771       -2.22772
     H        0.00000       -2.05142        0.26581
     C        0.00000        0.00000       -2.42152
     C        0.00000       -1.19640       -1.71740
