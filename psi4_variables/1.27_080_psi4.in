     H       -0.00000        2.05142        0.26581
     H       -0.00000        2.14771       -2.22772
     H        0.00000        0.00000       -3.50210
}

set {
    sapt_dft_functional     PBE0
    scf_type                DF
    freeze_core             true
    sapt_dft_grac_shift_a    0.116251
    sapt_dft_grac_shift_b    0.074627
