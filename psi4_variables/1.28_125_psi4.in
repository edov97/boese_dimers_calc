#charge=0 charge_a=0 charge_b=0 selection_a=1-2 selection_b=3-6 scaling=1.25 benchmark_Eint=-8.026 benchmark_unit=kcal/mol group=XH-N
set_num_threads(4)
memory 8 GB
basis this_basis {
    assign    aug-cc-pVQZ
}

molecule {
     0 1
    --
     0 1
     H        0.00002       -0.93248        0.00000
    Br       -0.00001        0.58174        0.00000
    --
     0 1
     N        0.00003       -2.99012        0.00000
     H       -0.47435       -3.34259        0.82165
     H       -0.47435       -3.34259       -0.82165
     H        0.94879       -3.34259        0.00000
}

set {
    sapt_dft_functional     PBE0
    scf_type                DF
    freeze_core             true
    sapt_dft_grac_shift_a    0.106591
    sapt_dft_grac_shift_b    0.113162
    sapt_dft_do_hybrid      true
    do_ind_exch_sinf        true
    do_disp_exch_sinf       true
}

nrg = energy('sapt(DFT)')

eelst = psi4.variable('SAPT ELST ENERGY')
eexch = psi4.variable('SAPT EXCH ENERGY')
eind = psi4.variable('SAPT IND ENERGY')
edisp = psi4.variable('SAPT DISP ENERGY')
esapt = psi4.variable('SAPT TOTAL ENERGY')
eexindinfty = psi4.variable('SAPT EXCH-IND20(S^INF) ENERGY')
eind20r = psi4.variable('SAPT IND20,R ENERGY')
eexind20r = psi4.variable('SAPT EXCH-IND20,R ENERGY')
eind20u = psi4.variable('SAPT IND20,U ENERGY')
eexind20u = psi4.variable('SAPT EXCH-IND20,U ENERGY')
edisp20 = psi4.variable('SAPT DISP20 ENERGY')
eexdisp20 = psi4.variable('SAPT EXCH-DISP20 ENERGY')
eexch10 = psi4.variable('SAPT EXCH10 ENERGY')
eexch10s2 = psi4.variable('SAPT EXCH10(S^2) ENERGY')
print('sapt elst energy =', eelst)
print('sapt total induction energy =', eind)
print('sapt total dispersion energy =', edisp)
print('sapt total energy =', esapt)
print('sapt ind20,r energy =', eind20r)
print('sapt exch-ind20,r energy =', eexind20r)
print('sapt ind20,u energy =', eind20u)
print('sapt exch-ind20,u energy =', eexind20u)
print('sapt disp20 (u or r?) energy =', edisp20)
print('sapt exch-disp20 (u or r?) energy =', eexdisp20)
print('sapt exch10 (u or r? which s?) energy =', eexch10)
print('sapt exch10 s^2 (u or r?) energy =', eexch10s2)
